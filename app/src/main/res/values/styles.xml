<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="colorPrimary">@color/secondary</item>

    </style>

    <style name="SplashTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="dialogsCardView" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">23dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="RoundedCornerShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="RoundedCornerShapeOverlay5">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>
</resources>